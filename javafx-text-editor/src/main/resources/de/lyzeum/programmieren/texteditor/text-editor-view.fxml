<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextArea?>

<BorderPane fx:id="borderPane" xmlns:fx="http://javafx.com/fxml" fx:controller="de.lyzeum.programmieren.texteditor.TextEditorController">
  <top>
    <ToolBar>
      <Button text="New" fx:id="btnNew" onAction="#onNewClick">
        <font>
          <Font size="16"/>
        </font>
      </Button>
      <Button text="Load" fx:id="btnLoad" onAction="#onLoadClick">
        <font>
          <Font size="16"/>
        </font>
      </Button>
      <Button text="Save" fx:id="btnSave" onAction="#onSaveClick">
        <font>
          <Font size="16"/>
        </font>
      </Button>
    </ToolBar>
  </top>
  <center>

  <TextArea fx:id="txtContent">
    <font>
      <Font size="20" />
    </font>
  </TextArea>

  </center>
</BorderPane>