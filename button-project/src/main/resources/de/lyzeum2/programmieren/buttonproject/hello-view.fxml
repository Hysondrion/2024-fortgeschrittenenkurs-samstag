<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="de.lyzeum2.programmieren.buttonproject.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <Button text="Hello!" onAction="#onButtonClick"/>
    <Label fx:id="lblInfo" text="Clicks: 0"/>
    <ProgressBar fx:id="prgClicks" progress="0.0"/>
    <Button
            text="Upgrade Clicks"
            fx:id="btnUpgrade"
            onAction="#onUpgradeButtonClick"
            disable="true"
    />
</VBox>
